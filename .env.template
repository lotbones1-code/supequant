# OKX API Credentials
# NEVER commit the actual .env file to git!
# Copy this template to .env and fill in your credentials

# OKX API Keys (Get from https://www.okx.com/account/my-api)
OKX_API_KEY=your_api_key_here
OKX_SECRET_KEY=your_secret_key_here
OKX_PASSPHRASE=your_passphrase_here

# Trading Mode
OKX_SIMULATED=True  # Set to False for live trading (BE CAREFUL!)

# Telegram Alerts (Optional - for future use)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Database (Optional - for future use)
DATABASE_URL=sqlite:///trading.db
